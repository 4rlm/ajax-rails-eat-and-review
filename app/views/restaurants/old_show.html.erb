<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row erb_header">
    <h3>View Details for <%= @restaurant.name.capitalize %></h3>
  </div>

  <div class="row">
    <table class="table table-bordered table-hover table-striped text-nowrap">
      <tr>
        <th class="w-small">Cuisine</th>
        <th class="w-small">Address</th>
        <th class="w-small">City</th>
        <th class="w-small">State</th>
        <th class="w-small">Zip</th>
        <th class="w-med">Updated</th>
      </tr>
      <tr>
        <td><%= @restaurant.cuisine %></td>
        <td><%= @restaurant.address %></td>
        <td><%= @restaurant.city %></td>
        <td><%= @restaurant.state %></td>
        <td><%= @restaurant.zip %></td>
        <td><%= @restaurant.updated_at.strftime('%x')%></td>
      </tr>
    </table>
    <%= link_to 'Back', restaurants_path, class: "btn btn-info" %>
  </div>

  <h1>Reviews</h1>
  <table class="table table-bordered table-hover table-striped text-nowrap">
    <thead>
      <tr>
        <th>User</th>
        <th>Restaurant</th>
        <th>Rating</th>
        <th>Description</th>
        <th colspan="3">Manage</th>
      </tr>
    </thead>

    <tbody>
      <% if @restaurant.reviews %>
      <%  @restaurant.reviews.each do |review| %>
        <tr>
          <td><%= review.user_id %></td>
          <td><%= review.restaurant_id %></td>
          <td><%= review.rating %></td>
          <td><%= review.description %></td>
          <td><%= link_to 'Show', review %></td>
          <td><%= link_to 'Edit', edit_review_path(review) %></td>
          <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <% end %>

    </tbody>
  </table>
  <%#= link_to 'New Review', new_review_path, class: "btn btn-info"  %>
  <%= render partial: 'reviews/form', locals: { review: Review.new } %>

  <br>
</div>
