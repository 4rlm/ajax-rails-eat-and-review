<p id="notice"><%= notice %></p>

<div class="row">
  <table class="table table-bordered table-hover table-striped text-nowrap">
    <thead>
      <tr>
        <th>Author</th>
        <th>Restaurant <%= icon('building') %></th>
        <th>Rating</th>
        <th>Description</th>
        <th colspan="3">Manage</th>
      </tr>
    </thead>

    <tbody>
      <% @reviews.each do |review| %>
      <tr>
        <td><%= User.find(review.user_id).username.capitalize %></td>
        <td><%= Restaurant.find(review.restaurant_id).name.capitalize %></td>
        <td><%= review.rating %></td>
        <td><%= link_to "#{review.description}", review, remote: true %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
      <% end %>
    </tbody>
  </table>
</div>
